<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Home Page</title>
    <style>
      /* General Body Styles */
      body {
        background-color: #909091; /* Light gray background for the entire page */
        font-family: Arial, sans-serif;
      }

      /* Card Styles */
      .card {
        display: flex;
        flex-direction: column;
        height: 100%;
        border: 1px solid #85a825; /* Light border for cards */
        border-radius: 0.375rem; /* Rounded corners for cards */
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075); /* Subtle shadow */
        background-color: #ffffff; /* White background for cards */
        transition: box-shadow 0.2s ease-in-out; /* Smooth transition for shadow */
      }

      .card:hover {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15); /* Enhanced shadow on hover */
      }

      .card-img-top {
        object-fit: contain;
        height: 200px; /* Fixed height for images */
        width: 100%; /* Ensure the image covers the full width of the card */
        border-bottom: 1px solid #dee2e6; /* Border below the image */
      }

      .card-body {
        flex: 1;
        padding: 1rem;
      }

      .card-title {
        font-size: 1.25rem;
        margin-bottom: 0.75rem;
      }

      .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        border-radius: 0.25rem;
        font-size: 1rem;
      }

      .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004085;
      }
    </style>
  </head>
  <body>
    <%- include('./partials/nav') %>
    <div class="container mt-3">
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% blogs.forEach(blog => { %>
        <div class="col">
          <div class="card">
            <img
              src="<%= blog.coverImageURL %>"
              class="card-img-top"
              alt="<%= blog.title %>"
            />
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <a href="/blog/<%=blog._id%>" class="btn btn-primary">View</a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
    <%- include('./partials/scripts') %>
  </body>
</html>
